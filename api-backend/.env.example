# MDUS API Backend Environment Configuration

# Database Configuration
POSTGRES_URL=postgresql://mdus_user:mdus_password@postgres:5432/mdus_db

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379/0

# AI Service Configuration
AI_SERVICE_URL=http://ai_service:8000

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Storage Configuration
UPLOAD_DIR=/app/uploads
PROCESSED_DIR=/app/processed
TEMP_DIR=/app/temp
ARCHIVE_DIR=/app/archive

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/tiff,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Processing Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MINUTES=30
RETRY_ATTEMPTS=3

# Cleanup Configuration
TEMP_FILE_RETENTION_HOURS=24
PROCESSED_FILE_RETENTION_DAYS=30

# Security and Compliance
ENABLE_AUDIT_LOGGING=true
REQUIRE_AUTHENTICATION=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090